<div class="flex-col">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Login</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "contents") do |f| %>
    <div class="my-5">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="my-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "rounded-lg py-3 px-5 inline-block font-medium cursor-pointer border border-blue-500" %>
    </div>
  <% end %>

</div>
