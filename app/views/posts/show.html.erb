<div class="w-full">
  <div class="flex">
    <div class="basis-3/4 pr-10">
      <h1 class="font-bold text-4xl"><%= @post.title %></h1>
      <div>
        <%= @post.content %>
      </div>

      <div class="flex justify-between items-center my-5">
        <h1 class="font-bold text-4xl">Comments</h1>
      </div>

      <div id="comments" class="min-w-full">
        <%= turbo_frame_tag "post_#{@post.id}_comments", src: post_comments_url(@post) %>
      </div>
    </div>
    <div class="basis-1/4 p-5">
    </div>
  </div>

  <div class="flex">
    <div class="basis-3/4 pr-10">
      <%= render "comments/form", comment: Comment.new %>
    </div>
    <div class="basis-1/4 p-5">
    </div>
  </div>
</div>
